#include<stdio.h>
int main(){


int vowel=0,constants = 0;

char c;

printf("Enter String : ");

do{

scanf("%c",&c);

if((c>='a' && c<='z' ) || (c>='A'&&c<='Z')){

    if(c=='a'|| c=='e' || c=='i' || c=='o' || c=='u' ||c=='A'|| c=='E' || c=='I' || c=='O' || c=='U'){

        vowel++;
    }

    else{
        constants++;
    }

}


}while(c!='\n');

printf("\nVowels : %d",vowel);

printf("\nConsonants : %d",constants);

}